				<RowDefinition Height="35"/>
				<RowDefinition Height="35"/>
				<RowDefinition Height="35"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="15"/>
			</Grid.RowDefinitions>
			<TextBox Name="BanknoEdit" 
								 Grid.Row="1"
								 Grid.Column="1"
								 Margin="3,3,3,3"	
								 Height="25"
								 IsEnabled="True"
