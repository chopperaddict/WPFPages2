								 HorizontalContentAlignment="Center"
								 VerticalContentAlignment="Center"
								Text="{Binding AcType, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" LostFocus="ActypeEdit_LostFocus" 
							   />

			<TextBox Name="BalanceEdit" 
								 Grid.Row="4"
								 Grid.Column="2"
