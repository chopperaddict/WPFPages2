			<TextBlock Text="Bank #"
						   Grid.Row="1"
						   Width="80"
						   HorizontalAlignment="left"
						   VerticalAlignment="Center"/>
			<TextBlock Text="Customer #"
						   Grid.Row="2"
						Grid.Column="0"
